{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Product",
    "definitions": {
        "Product": {
            "type": "object",
            "additionalProperties": {},
            "properties": {
                "applicable_missions": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "CASSIOPE_e-POP",
                            "CHAMP",
                            "Combined_Mission_Data",
                            "CryoSat-2",
                            "CSES",
                            "GOCE",
                            "GRACE",
                            "GRACE-FO",
                            "Miscellaneous",
                            "Swarm"
                        ]
                    }
                },
                "applicable_spacecraft": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "CASSIOPE_e-POP (Swarm-E)",
                            "CHAMP",
                            "Combined_Mission_Data",
                            "CryoSat-2",
                            "CSES-01",
                            "GOCE",
                            "GRACE-A",
                            "GRACE-B",
                            "GRACE-FO-1",
                            "GRACE-FO-2",
                            "Miscellaneous",
                            "Swarm-A",
                            "Swarm-B",
                            "Swarm-C"
                        ]
                    }
                },
                "changelog": {
                    "type": "string",
                    "contentMediaType": "text/html"
                },
                "authors": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Name of the authoring organization"
                            },
                            "ror": {
                                "type": "string",
                                "pattern": "^https://ror\\.org/[0-9a-z]{9}$",
                                "description": "Research Organization Registry (ROR) identifier"
                            }
                        },
                        "required": ["name"],
                        "additionalProperties": false
                    },
                    "description": "Organizations responsible for authoring this product"
                },
                "description": {
                    "type": "string",
                    "contentMediaType": "text/html"
                },
                "details": {
                    "type": "string",
                    "contentMediaType": "text/html"
                },
                "fast_processing": {
                    "type": "boolean"
                },
                "creation_year": {
                    "type": "integer",
                    "description": "Year when the product was created"
                },
                "identifiers": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "identifier": {
                                "type": "string",
                                "description": "The identifier value (e.g., DOI)"
                            },
                            "identifierType": {
                                "type": "string",
                                "enum": [
                                    "DOI",
                                    "URL"
                                ],
                                "description": "Type of identifier following DataCite terminology"
                            },
                            "role": {
                                "type": "string",
                                "enum": [
                                    "concept",
                                    "version",
                                    "external"
                                ],
                                "description": "Role of this identifier (concept DOI for all versions, version-specific DOI, or external DOI for identical/similar dataset in independent system)"
                            },
                            "version": {
                                "type": "string",
                                "description": "Version number for version-specific identifiers"
                            }
                        },
                        "required": [
                            "identifier",
                            "identifierType"
                        ],
                        "additionalProperties": false
                    },
                    "description": "List of identifiers following DataCite terminology - includes version DOIs, concept DOI, and related identifiers"
                },
                "link_files_ftp": {
                    "type": "string",
                    "format": "uri",
                    "qt-uri-protocols": [
                        "ftp"
                    ]
                },
                "link_files_http": {
                    "type": "string",
                    "format": "uri",
                    "qt-uri-protocols": [
                        "https"
                    ]
                },
                "link_hapi": {
                    "type": "string",
                    "format": "uri",
                    "qt-uri-protocols": [
                        "https"
                    ]
                },
                "link_notebook": {
                    "type": "string",
                    "format": "uri",
                    "qt-uri-protocols": [
                        "https"
                    ]
                },
                "link_vires_gui": {
                    "type": "string",
                    "format": "uri",
                    "qt-uri-protocols": [
                        "https"
                    ]
                },
                "definition": {
                    "type": "string"
                },
                "product_id": {
                    "type": "string"
                },
                "product_types" : {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "related_resources": {
                    "type": "string",
                    "contentMediaType": "text/html"
                },
                "thematic_areas": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "Acceleration measurements",
                            "Attitude information",
                            "Core field",
                            "Ephemeris",
                            "Geodesy/Gravity",
                            "GNSS measurements",
                            "HK data",
                            "Ionosphere/Magnetosphere",
                            "Lithosphere",
                            "Magnetic measurements",
                            "Mantle",
                            "Ocean Tides",
                            "Orbit information",
                            "Plasma measurements",
                            "Space Weather",
                            "Thermosphere"
                        ]
                    }
                },
                "variables_table": {
                    "type": "string"
                }
            },
            "required": [],
            "title": "Product"
        }
    }
}
